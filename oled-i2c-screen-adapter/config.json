{
  "name": "Add-on OLED I2C Screen Adapter",
  "version": "0.3.2",
  "init": false,
  "slug": "oled-i2c-screen-adapter",
  "description": "This Home Assistant add-on enables the use of an OLED screen via I2C on a Raspberry Pi running Home Assistant Operating System (HA OS). HA OS typically restricts direct access to I2C due to system permissions, but this add-on bypasses those limitations by leveraging the Supervisor.",
  "url": "https://github.com/Valeyrian/Home_Assistant_Add-on_OLED_I2C_Screen_Adapter",
  "arch": ["aarch64", "armhf", "armv7", "amd64"],
  "panel_icon": "mdi:monitor",
  "panel_title": "OLED Screen",
  "icon": "icon.png",
  "logo": "logo.png",
  "startup": "services",
  "boot": "auto",
  "map": ["config:rw"],
  "privileged": ["SYS_RAWIO"],
  "host_network": true,
  "devices": ["/dev/i2c-1", "/dev/i2c-0"],
  "full_access": false,
  "options": {
    "mqtt_broker": "core-mqtt",
    "mqtt_port": 1883,
    "mqtt_user": "homeassistant",
    "mqtt_password": "",
    "i2c_address": "0x3C",
    "i2c_port": 1,
    "display_width": 128,
    "display_height": 64,
    "display_type": "ssd1306",
    "refresh_interval": 5,
    "default_brightness": 255,
    "default_mode": "text",
    "font_size": 10,
    "show_header": true,
    "qr_link": "http://homeassistant.local:8123/",
    "log_level": "info",
    "topics": {
      "text": "screen/gme12864/text",
      "mode": "screen/gme12864/mode",
      "brightness": "screen/gme12864/brightness",
      "refresh": "screen/gme12864/refresh",
      "status": "screen/gme12864/status"
    },
    "custom_lines": [
      { "format": "Temp: {} C", "topic": "home/sensor/temp" },
      { "format": "Hum: {} %", "topic": "home/sensor/hum" }
    ]


    
  },
  "schema": {
    "mqtt_broker": "str",
    "mqtt_port": "port",
    "mqtt_user": "str",
    "mqtt_password": "password",
    "i2c_address": "str",
    "i2c_port": "int(0,1)",
    "display_width": "int",
    "display_height": "int",
    "display_type": "list(ssd1306|sh1106)",
    "refresh_interval": "int(1,60)",
    "default_brightness": "int(0,255)",
    "default_mode": "list(auto|system|network|qr|custom|off)",
    "font_size": "int(8,20)",
    "show_header": "bool",
    "qr_link": "str",
    "log_level": "list(debug|info|warning|error|critical)",
    "topics": {
      "text": "str",
      "command": "str", 
      "mode": "str",
      "brightness": "str",
      "refresh": "str",
      "status": "str"
    },
    "custom_lines": [{
      "format": "str",
      "topic": "str"
    }]
     
  },
  "ports": {},
  "hassio_api": true,
  "hassio_role": "default",
  "homeassistant_api": true,
  "environment": {
    "LOG_LEVEL": "info"
  }
}
